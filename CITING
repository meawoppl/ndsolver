The formulation of this code is based off of the work of 
Dr. Robert Erdmann and Matthew Goodman.  If you use this 
in a scholarly work the following citations would be appreciated:

@phdthesis{erdmann_permeability_2006,
       author = {R.G. Erdmann},
       title = {Image-based numerical simulation of Stokes flow in porous media},
       school = {The University of Arizona},
       year = {2006}
}

@phdthesis{goodman2011properties,
  title={{Properties of stochastic flow and permeability of random porous media}},
  author={Goodman, M.R.},
  year={2011},
  school={THE UNIVERSITY OF ARIZONA}
}